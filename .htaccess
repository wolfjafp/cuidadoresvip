# Configuración de caché y optimización
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Establecer caché por defecto a 1 mes
    ExpiresDefault "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 week"
    
    # Datos
    ExpiresByType text/xml "access plus 1 day"
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType application/json "access plus 1 day"
    
    # Feeds
    ExpiresByType application/rss+xml "access plus 1 hour"
    ExpiresByType application/atom+xml "access plus 1 hour"
    
    # Favicon
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Multimedia
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    
    # Archivos de video y audio
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType audio/ogg "access plus 1 year"
    ExpiresByType audio/mp3 "access plus 1 year"
    
    # CSS y JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    
    # Fuentes
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # Añadir encabezado Cache-Control para mejorar compatibilidad
    <IfModule mod_headers.c>
        Header append Cache-Control "public"
    </IfModule>
</IfModule>

# Compresión GZIP
<IfModule mod_deflate.c>
    # Activar compresión para los siguientes tipos MIME
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    
    # Configuración avanzada de compresión
    <IfModule mod_setenvif.c>
        # Evitar comprimir para navegadores problemáticos
        BrowserMatch ^Mozilla/4 gzip-only-text/html
        BrowserMatch ^Mozilla/4\.0[678] no-gzip
        BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
        
        # No comprimir imágenes ya comprimidas
        SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp|avif)$ no-gzip dont-vary
    </IfModule>
    
    # Asegurar que proxies entregan contenido comprimido correctamente
    <IfModule mod_headers.c>
        Header append Vary User-Agent env=!dont-vary
    </IfModule>
</IfModule>

# Cabeceras de seguridad y rendimiento
<IfModule mod_headers.c>
    # Protección XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Evitar MIME-sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Política de referencia
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Política de seguridad de contenido (CSP)
    Header set Content-Security-Policy "default-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com https://cdnjs.cloudflare.com https://www.google.com; img-src 'self' data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://www.google.com https://www.gstatic.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; connect-src 'self';"
    
    # Habilitar Keep-Alive
    Header set Connection keep-alive
    
    # Cabeceras para mejorar rendimiento
    Header unset ETag
    FileETag None
    
    # Cabeceras para recursos estáticos
    <FilesMatch "\.(ico|pdf|jpg|jpeg|png|webp|gif|svg|js|css|swf|woff|woff2|ttf|otf)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Cabeceras para HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=604800, public"
    </FilesMatch>
</IfModule>

# Redireccionar www a no-www
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# Forzar HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Prevenir listado de directorios
Options -Indexes

# Proteger archivos importantes
<FilesMatch "^(\.htaccess|\.htpasswd|\.git|\.env|config\.php)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Optimización de URL y redirecciones
<IfModule mod_rewrite.c>
    # Redirigir URLs con slash al final
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [R=301,L]
    
    # Redirigir 404 al index para SPA
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ /index.html [L]
</IfModule>

# Optimización de rendimiento
<IfModule mod_headers.c>
    # Desactivar ETags para mejorar el rendimiento
    Header unset ETag
    FileETag None
    
    # Permitir Cross-Origin para fuentes web
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Establecer zona horaria por defecto
SetEnv TZ America/Santiago
